<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/license_display_library_name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/license_display_library_indicator"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/license_display_library_indicator"
        android:src="@drawable/license_display_library_down_arrow"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="5dp" />

</RelativeLayout>